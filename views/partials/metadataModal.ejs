
<!-- views/partials/metadataModal.ejs -->
<div class="modal fade" id="metadataModal" tabindex="-1" role="dialog" aria-labelledby="metadataModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="metadataModalLabel">Edit Metadata</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="metadataDisplay">
                    <label for="metadataTitle">Title for: <span id="metadata-filename"></span></label>
                    <input type="text" id="metadataTitle" class="form-control" readonly>
                </div>
                <div id="progressContainer" class="mt-3" style="display: none;">
                    <div id="progressStatus" class="text-muted">Processing...</div>
                </div>
                <button id="editTitleButton" class="btn btn-primary mt-3" onclick="startEditingTitle()">Edit Title</button>
                <button id="saveTitleButton" class="btn btn-success mt-3" onclick="saveTitle()" style="display: none;">Save</button>
            </div>
        </div>
    </div>
</div>
